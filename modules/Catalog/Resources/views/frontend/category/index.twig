{% extends "core::layouts.frontend.default" %}

{% block content %}

    <h1>{{ category.humanName }}</h1>

    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Starts At</th>
            <td colspan="2">Actions</td>
        </tr>
        </thead>
        <tbody>

        {% for event in events %}

            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.displayTitle }}</td>
                <td>{{ event.startsAt }}</td>
                <td>{{ link_to_route('lines','Lines',{type: 'event', id: event.id}) }}</td>
                <td>{{ link_to_route('prediction.new','Add Prediction',{type: 'event',id: event.id}) }}</td>
            </tr>

        {% endfor %}

        </tbody>
    </table>

{% endblock %}