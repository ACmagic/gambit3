{% extends "core::layouts.frontend.default" %}

{% block content %}

    <h1>Review</h1>

    <div>
        {{ link_to_route('checkout.complete','Submit') }}
    </div>

    <ol>
        {% for item in quote.advertisedLineItems %}
            <li>Line

                <p>Side: {{ item.side.humanName }}</p>
                <p>Odds: {{ item.odds }}</p>
                <p>Min Wager: {{ item.amount }}</p>
                <p>Max Wager: {{ item.amountMax }}</p>
                <p>Inventory: {{ item.inventory }}</p>

                <ul>
                    {% for prediction in item.predictions %}
                        <li>
                            <p>{{ prediction.game.displayTitle }}</p>
                            <p>{{ prediction.pick.name }} +{{ prediction.spread }}</p>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ol>

    <ol>

        {% for item in quote.acceptedLineItems %}

                <li>Accepted Line

                    <p>Line: {{ item.advertisedLine.id }}</p>
                    <p>Amount: {{ item.amount }}</p>
                    <p>Quantity: {{ item.quantity }}</p>

                </li>

        {% endfor  %}

    </ol>

{% endblock %}